With wm as (Select * from awardsmanagers 
			Where playerid in(Select playerid from awardsmanagers
					Where awardid = 'TSN Manager of the Year'
					and lgid = 'NL'
					intersect
					Select playerid from awardsmanagers
					Where awardid = 'TSN Manager of the Year'
					and lgid = 'AL')
			and awardid = 'TSN Manager of the Year'
)
Select wm.playerid, wm.yearid,
	   namefirst,
	   namelast,
	   teams.name
FROM wm 
INNER JOIN people USING(playerid)
INNER JOIN managers ON wm.playerid = managers.playerid AND wm.yearid = managers.yearid
INNER JOIN teams ON managers.teamid = teams.teamid AND wm.yearid = teams.yearid;